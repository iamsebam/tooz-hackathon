<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Card">
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="BaseIcon">
        <item name="tint">@color/white</item>
    </style>

    <style name="CardIcon" parent="BaseIcon">
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>

    </style>

    <style name="BaseText">
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderText" parent="BaseText">
        <item name="android:fontFamily">@font/font_brown_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/header_text</item>
    </style>

    <style name="ContentText" parent="BaseText">
        <item name="android:fontFamily">@font/font_brown_medium</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/content_text</item>
    </style>
</resources>